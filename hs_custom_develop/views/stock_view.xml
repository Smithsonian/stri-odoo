<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data>
		<!-- Add you code here -->

		<!-- model.name inherit form view -->
		<record id="stri_custom_stock_view" model="ir.ui.view">
			<field name="name">stri.custom.stock.view</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_form"/>
			<field name="arch" type="xml">
				<!-- Add your xpath here -->
				<xpath expr="//field[@name='id']" position="after">
					<!-- Add your fields here -->
					<field name="required_invoice" invisible="1"/>
				</xpath>

				<xpath expr="//button[@name='do_print_picking']" position="before">
					<!-- Add your fields here -->
					<button name="button_validate" attrs="{'invisible': [('enable_validate', '=', False)]}" string="Validate" type="object" groups="stock.group_stock_user" class="o_btn_validate"/>
				</xpath>
			</field>
		</record>
	</data>
</odoo>