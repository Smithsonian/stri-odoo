<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data>
		
		<template id="portal_my_details" inherit_id="portal.portal_my_details">
			<xpath expr="//t[@t-foreach='countries or []']" position="replace">
				<!-- Add your fields here -->
				<t t-foreach="countries or []" t-as="country">
					<t t-if="partner.country_id">
						<option t-att-value="country.id" t-att-selected="country.id == int(country_id) if country_id else country.id == partner.country_id.id">
							<t t-esc="country.name" />
						</option>
					</t>
					<t t-else="">
						<option t-att-value="country.id" t-att-selected="'selected' if country.code == 'PA' else null">
							<t t-esc="country.name" />
						</option>
					</t>
				</t>
			</xpath>
