<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="1">
        <!-- Add you code here -->
            <record id="view_visitor_wizard" model="ir.ui.view">
            <field name="name">Search Visitor</field>
            <field name="model">visitor.wizard</field>
            <field name="arch" type="xml">
                <form string="Do a search">
                <sheet> 
                        <group>
                            <group>
                                <field name = "visitor" string="Visitor ID"/>
                                <field name = "hstatus" string="Status"/>
                                <field name = "visitor_name" string="Name"/>
                                <field name = "name" string="First Name"/>
                                <field name = "last_name" string="Last Name"/>
                                <field name = "visitor_email" string="Email"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="search_visitor" string="Search" type="object" class="oe_highlight" />
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="search_visitor_wizard" model="ir.actions.act_window">
                <field name="name">Search Visitor</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">visitor.wizard</field>
                <field name="view_mode">form</field>
                <field name="view_id" ref="view_visitor_wizard"/>
                <field name="target">new<field/>
        </record>
            
    </data>
        
</odoo>

