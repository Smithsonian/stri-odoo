<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_visitor_wizard" model="ir.ui.view">
        <field name="name">Search Visitor</field>
        <field name="model">visitor.wizard</field>
        <field name="arch" type="xml">
            <form string="Do a search">
                <sheet> 
                    <group>
                        <group>
                            <field name = "visitor" string="Visitor ID"/>
                            <field name = "hstatus" string="Status"/>
                            <field name = "visitor_name" string="Name"/>
                            <field name = "name" string="First Name"/>
                            <field name = "last_name" string="Last Name"/>
                            <field name = "visitor_email" string="Email"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="search_visitor" string="Search" type="object" class="oe_highlight" />
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <act_window id="launch_search_wizard"
                    name="Search Visitor"
                    src_model="muki.rest"
                    res_model="visitor.wizard"
                    view_mode="form"
                    target="new"
                    key2="client_action_multi"/>
</odoo>

