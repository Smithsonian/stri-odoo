<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_visitor_wizard" model="ir.ui.view">
        <field name="name">Search Visitor</field>
        <field name="model">visitor.wizard</field>
        <field name="arch" type="xml">
            <form string="Do a search">
                <group>
                    <group>
                        <field name="status" />
                        <field name="visit_name"/>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="last_name"/>
                        <field name="visit_email"/>
                        <field name="visitor"/>
                    </group>
                </group>
                <footer>
                    <button name="search_visitor" string="Search" type="object" class="oe_highlight" />
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="search_visitor_wizard" model="ir.actions.act_window">
            <field name="name">Search Visitor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">visitor.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_visitor_wizard"/>
            <field name="target">new<field/>
    </record>
        
</odoo>

