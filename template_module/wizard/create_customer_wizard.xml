<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_create_visitor_action" model="ir.ui.view">
        <field name="name">create.visitor.action.view.form</field>
        <field name="model">create.customer</field>
        <field name="arch" type="xml">
            <form string="CREATE CUSTOMER">
                <label string="Do you want create this costumer? "/>
                <group>
                    <group>
                        <field name = "visitor_name"/>
                    </group>
                </group>
                <footer>
                    <button name="create_visitor" string="Create" type="object"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
                
            </form>
        </field>
    </record>
</odoo>




