<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data>
        <!--tree view-->
        <record id = "vso_tree_view" model = "ir.ui.view">
            <field name = "name">VSO View Tree</field>
            <field name = "model">muki.rest</field>
            <field name = "arch" type = "xml">
                <tree string = "Search Visitor" create="false" edit="false" delete="false">
                    <field name = "visitor"/>
                    <field name = "visitor_name" />
                    <field name = "name" />
                    <field name = "last_name"/>
					<field name = "visitor_email"/>
                    <field name = "hstatus"/>
                    
                </tree>
            </field>
        </record>

        <!--FORM VIEW-->
        <record id = "vso_form_view" model = "ir.ui.view">
            <field name = "name">VSO View Form</field> 
            <field name = "model">muki.rest</field> 
            <field name = "arch" type = "xml"> 
                <form string = "VSO View"> 
                    <sheet> 
                        <group>
                            <group>
                            	<field name = "visitor"/>
                                <field name = "hstatus" />
                                <field name = "visitor_name" />
                                <field name = "name"/>
                                <field name = "last_name" />
					            <field name = "visitor_email" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!--CREANDO VISTA DE BUSQUEDA PARA APLICAR FILTROS-->
        
        <record id="vso_search_view" model="ir.ui.view">
            <field name="name">VSO Search View</field>
            <field name="model">muki.rest</field>
            <field name="arch" type="xml">
                <search string="Search Visitor">
                        <field name="visitor" string="Visitor ID" filter_domain="[('visitor', '=', self)]"/>
                        <field name="visitor_name" string="Name" filter_domain="[('visitor_name', '=', self)]"/>
                        <field name="visitor_email" string="Email" filter_domain="[('visitor_email', '=', self)]"/>
                        <field name="hstatus" string="Status" filter_domain="[('hstatus', '=', self)]"/>
                        <field name="name" string="First Name" filter_domain="[('name', '=', self)]"/>
                        <field name="last_name" string="Last Name" filter_domain="[('last_name', '=', self)]"/>
                        <separator/>
                    
                </search>
            </field>
        </record>

        <record id="muki_rest_action" model="ir.actions.act_window">
			<field name="name">VSO SEARCH</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">muki.rest</field>
			<field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="vso_search_view"/>
			<field name="view_type">form</field>
		</record>

       <!-- Este es la acciÃ³n heredada que permite mostrar los datos en vista arbol -->
        <record id="vso_menu_tree" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="template_module.muki_rest_action" />
            <field name="view_id" ref="template_module.vso_tree_view"/>
            <field name="view_mode">tree</field>
            <field name="sequence" eval="2"/>
        </record>
 
        <!-- Este es la accion heredada que permite mostrar los datos en vista formulario 
        de facturas en invoice view -->
        <record id="vso_menu_form" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="template_module.muki_rest_action"/>
            <field name="view_id" ref="template_module.vso_form_view"/>
            <field name="view_mode">form</field>
            <field name="sequence" eval="2"/>
        </record>

        
		<menuitem id="muki_rest_menu" name="VSO Connect" parent="account.menu_finance_receivables" action="muki_rest_action" sequence=""/>
		
        <record model="ir.ui.view" id="wizard_form_view">
            <field name="name">wizard.form</field>
            <field name="model">create.customer</field>
            <field name="arch" type="xml">
                <form string="CREATE CUSTOMER">
                    <group>
                        <!-- <label string="Do you want create this costumer?"/> -->
                        <field name = "visitor_name"/>
                    </group>
                    <!-- <footer>
                        <button name="create_visitor" string="Create" type="object"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer> -->
                </form>
                
            </field>
        </record>

        <act_window id="launch_session_wizard"
                    name="Create Customer"
                    src_model="muki.rest"
                    res_model="create.customer"
                    view_mode="form"
                    target="new"
                    key2="client_action_multi"/>
	</data>
</odoo>