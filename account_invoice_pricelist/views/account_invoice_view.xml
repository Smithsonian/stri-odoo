                <field name="pricelist_id" force_save="1" attrs="{'readonly': [('login', '=', False)]}"/>
            </field>
            <!-- Campo invisible para uso de activacion de botones -->
            <!-- <xpath expr="//button[@name='preview_invoice']" position="before">
					<field name="bool_field" invisible="1"/>
				</xpath> -->
