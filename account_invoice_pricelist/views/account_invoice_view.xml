                <button type="object"
                        name="action_invoice_open"
                        string="Validate"
                        attrs="{'invisible':['|',('bool_field', '=', False), ('state', 'not in', ('draft'))]}"
                        class="oe_highlight o_invoice_validate"
                />

            </xpath> -->
            
        </field>
    </record>

    <record id="view_account_invoice_search" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='group_by_partner_id']" position="after">
                <filter string="Pricelist"
                        name="pricelist"
                        context="{'group_by':'pricelist_id'}"
                        invisible="context.get('type', '') not in ['out_invoice', 'out_refund']"/>
            </xpath>

            <!-- FILTROS PARA LAS FACTURAS -->
            <xpath expr="//search[1]/group[1]/separator[1]" position="after">
                <filter string="BCI"
                        name="invoice_bci"
                        domain="[('journal_id.name','=','BCI 1312')]"/>
                
                <filter string="Administration"
                        name="invoice_stri"
                        domain="[('journal_id.name','=','Administration 1380')]"/>
                
                <filter string="STRIFund"
                        name="invoice_fund"
                        domain="[('class_code','!=',False)]"/>
            </xpath>
        </field>
    </record>

</odoo>
