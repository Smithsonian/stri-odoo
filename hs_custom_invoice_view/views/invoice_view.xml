<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="invoice_meal_menu_action" model="ir.actions.act_window">
            <field name="name">Invoice View</field>
            <field name="res_model">invoice.view</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">View Invoice List</p>
            </field>
        </record>

        <!--tree view-->
        <record id = "invoice_meal_tree_view" model = "ir.ui.view">
            <field name = "name">Invoice View Tree</field>
            <field name = "model">invoice.view</field>
            <field name = "arch" type = "xml">
                <tree string = "Invoice View">
                    <field name = "number" />
                    <field name = "quantity" />
					<field name = "date" />
					<field name = "product_id" />
					<field name = "partner_id" />
					<field name = "total" />
					<field name = "note" />
                </tree>
            </field>
        </record>

        <!--FORM VIEW-->

        <record id = "invoice_meal_view" model = "ir.ui.view">
            <field name = "name">Invoice View Form</field>
            <field name = "model">invoice.view</field>
            <field name = "arch" type = "xml">
                <form string = "Invoices View">
                    <sheet>
                    <!-- <field name = "photo" widget = "image" class = "oe_left oe_avatar" /> -->                   
                        <group>
                            <group>
                            	<field name = "number" />
                            </group>
							<group>
								<field name = "date" />
							</group>
								<field name = "partner_id" />
							</group>
							<group>
								<field name = "product_id" />
							</group>
                            <group>
                                <field name = "quantity" />
                            </group>
							<group>
								<field name = "total" />
                            </group>
							<group>
                            	<field name = "note" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    
        <record id="invoice_meal_menu" model="ir.actions.act_window">
            <field name="name">Invoice View</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">invoice.view</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <!-- <field name="view_type">tree,form</field> -->
            <!-- <field name="view_mode">tree</field> -->
        </record>
       
        
		<!-- Esta seccion es para que las vista creadas aparezcan en el menu de reportes en el modulo de facturas-->
        <menuitem id="invoice_meal_custom_menu" parent="account.menu_finance_reports" name="Invoices View" action="invoice_meal_menu"/>
        
    </data>
        
</odoo>