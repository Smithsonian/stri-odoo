<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="EventRegistrationButton">
        <div class='control-button'>
            <i class='fa fa-tag' /> Event
        </div>
    </t>

    <t t-name="EventRegistrationPopup">
        <div class="modal-dialog">
            <div class="popup popup-confirm" style="height: 400px;">
                <p class="title" style="border-bottom: solid 3px #6EC89B;">Select Event</p>
                <div class="event_block">
                    <div class="button another_day">
                        Another Day
                    </div>
                    <div class="button today" style="float:left; margin-left:10px;">
                        Today
                    </div>
                </div>
                <t t-if="widget.events">
                    <div class='event-list'>
                        <ul class='event-list-contents'>
                        </ul>
                    </div>
                </t>
                <div class="footer">
                    <div class="button confirm">
                        Apply
                    </div>
                    <div class="button cancel">
                        Cancel
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="EventLine">
        <li class='event-line' t-att-data-id='event_ticket.event_id[0]' t-att-data-ticket_id="event_ticket.id">
                <t t-esc='event_ticket.event_id[1]' />
        </li>
    </t>

    <t t-extend="Orderline">
        <t t-jquery=".info-list" t-operation="append">
            <t t-if="line.get_event()">
                <li class="info orderline-event">
                    <i class='fa fa-tag' role="img" aria-label="Event" title="Event"/><t t-esc="line.get_event()" />
                </li>
            </t>
        </t>
    </t>

</templates>