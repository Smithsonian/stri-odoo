
<odoo>
    <record id="pos_session_inherited_form_view" model="ir.ui.view">
        <field name="name">pos.session.inherited.form.view</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet//div[@name='button_box']" position="inside">
                <button type="object"
                    class="oe_stat_button"
                    id="open_registration"
                    icon="fa-tag"
                    name="open_registration">
                    <field name="event_count" widget="statinfo" string="Registration"/>
                </button>
            </xpath>
        </field>
    </record>

    <record id="event_registration_search_inherited_search_view" model="ir.ui.view">
        <field name="name">event.registration.search</field>
        <field name="model">event.registration</field>
        <field name="inherit_id" ref="event.view_registration_search" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='createmonth']" position="after">
                <filter string="Event Ticket" name="pos_event_ticket_id" context="{'group_by':'pos_event_ticket_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="event_registration_search_inherited_tree_view" model="ir.ui.view">
        <field name="name">event.registration.tree</field>
        <field name="model">event.registration</field>
        <field name="inherit_id" ref="event.view_event_registration_tree" />
        <field name="arch" type="xml">
            <field name="email" position="after">
                <field name="pos_event_ticket_id" string="Ticket"></field>
            </field>
        </field>
    </record>
</odoo>