<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_event_registration_ticket_form" model="ir.ui.view">
            <field name="name">event.registration.form.inherit</field>
            <field name="model">event.registration</field>
            <field name="inherit_id" ref="event.view_event_registration_form" />
            <field name="arch" type="xml">
                <field name="event_id" position="after">
                    <field
                        name="pos_event_ticket_id"
                        domain="[
                            ('event_id', '=', event_id),
                        ]"
                        attrs="{'invisible': [('event_id', '=', False)]}"
                        options="{'no_open': True, 'no_create': True}"
                    />
                </field>
            </field>
        </record>

    <record id="view_event_form_inherit_ticket" model="ir.ui.view">
        <field name="name">event.form.inherit</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">
            <page name="event_mail_schedule" position="before">
                <page string="POS Tickets">
                    <field name="pos_event_ticket_ids" context="{'default_name': name}" mode="tree,kanban">
                        <tree string="Tickets" editable="bottom">
                            <field name="name"/>
                            <field name="product_id" context="{'default_pos_event_ok':1}"/>
                        </tree>
                        <form string="Tickets">
                            <group>
                                <group>
                                    <field name="name"/>
                                    <field name="product_id" context="{'default_pos_event_ok':1}"/>
<!--                                    <field name="price"/>-->
                                </group>
                            </group>
                        </form>
                    </field>
                </page>
            </page>
        </field>
    </record>

</odoo>