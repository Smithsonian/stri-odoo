<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data>

		<record id="res_config_settings_inherit_form" model="ir.ui.view">
			<field name="name">res.config.settings.inherit.form</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id" ref="account.res_config_settings_view_form"/>
			<field name="arch" type="xml">
				
				<xpath expr="//div[@id='account_followup']" position="before">
					<div class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_right_pane">
							<div>
								<label string="Default payment analityc account" for="payment_analytic_acc"/>
								<div class="text-muted">
									Select default payment account
								</div>
								<div class="content-group mt16">
									<field name="payment_analytic_acc" colspan="4" nolabel="1"/>
								</div>
							</div>
						</div>
					</div>
				</xpath>
				
			</field>
		</record>
		
	</data>
</odoo>