<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data>
		<!-- Add you code here -->
		
		<!-- model.name inherit form view -->
		<record id="res_partner_fund_inherit1" model="ir.ui.view">
			<field name="name">res.partner.fund.inherit1</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='type']" position="after">
					<!-- Add your fields here -->
					<field name="is_fund" string="Is Fund?" attrs="{'invisible':[('company_type', '!=', 'company')]}"/>

					<field name="fund_manager" attrs="{'invisible':[('is_fund', '!=', True)]}"/>
					<field name="principal_investigator" attrs="{'invisible':[('is_fund', '!=', True)]}"/>
				</xpath>

			</field>
		</record>
	</data>
</odoo>