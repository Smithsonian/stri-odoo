    <t t-name="Orderline">
        <li t-attf-class="orderline #{ line.selected ? 'selected' : '' }">
            <span class="product-name">
                <t t-esc="line.get_product().display_name"/>
            </span>
            
            <br/><span class="product-name">
                   <i>  Note : <t t-esc="line.get_to_stay()" /> </i>
            </span>
            
            <span class="price">
                <t t-esc="widget.format_currency(line.get_display_price())"/>
            </span>
            <ul class="info-list">
                <t t-if="line.get_quantity_str() !== '1' || line.selected ">
                    <li class="info">
                        <em>
                            <t t-esc="line.get_quantity_str()" />
                        </em>
                        <t t-esc="line.get_unit().name" />
                        at
                        <t t-esc="widget.format_currency(line.get_unit_display_price(),'Product Price')" />
                        /
                        <t t-esc="line.get_unit().name" />
                    </li>
                </t>
                <t t-if="line.get_discount_str() !== '0'">
                    <li class="info">
                        With a 
                        <em>
                            <t t-esc="line.get_discount_str()" />%
                        </em>
                        discount
                    </li>
                </t>
            </ul>
        </li>
    </t>
    
    <t t-extend="PosTicket" >
        <t t-jquery="table[class*='receipt-orderlines']" t-operation="replace">
            <table class='receipt-orderlines'>
                    <colgroup>
                        <col width='50%' />
                        <col width='25%' />
                        <col width='25%' />
                    </colgroup>
                    <tr t-foreach="orderlines" t-as="orderline">
                        <td>
                            <t t-esc="orderline.get_product().display_name"/>
                             <t t-if="orderline.get_discount() > 0">
                                <div class="pos-disc-font">
                                    With a <t t-esc="orderline.get_discount()"/>% discount
                                </div>
                            </t>
                            <br/>
                            
                            <t t-if="orderline.get_to_stay()">
                                   <i> Note : <t t-esc="orderline.get_to_stay()" /> </i> 
                            </t>
             
                        </td>
                        <td class="pos-right-align">
                            <t t-esc="orderline.get_quantity_str_with_unit()"/>
                        </td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency(orderline.get_display_price())"/>
                        </td>
                    </tr>
            </table>
        
        </t>
        <t t-jquery="table[class*='receipt-orderlines']" t-operation="after">
            <t t-if= 'order.get_to_stay()'>
                <table>
                    <tr><td>Notes:</td><td class="pos-right-align">
                        <t t-esc="order.get_to_stay()"/>
                        </td></tr>
                </table>
            </t>
        </t>
    </t>
    
