<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data>
		<!-- Add you code here -->

		<template id="item_fund_template">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="web.external_layout">
						<t t-set="o" t-value="o.with_context(lang=lang)" />
						<div class="page">

							<h2>Item By Fund Reports</h2>

							<table class="table table-sm">
								<thead>
									<th>Name</th>
									<th>Code</th>
									<th>Category</th>
									<th>ChartField</th>
								</thead>
							</table>
							
						</div>
					</t>
				</t>
			</t>
		</template>



		<report
			id="item_fund_report_action"
			model="product.product"
			string="item By Fund Report"
			report_type="qweb-pdf"
			name="hs_custom_reports.item_fund_template"
			file="hs_custom_reports.item_fund_template"
			print_report_name="'Item_by_fund'"
		/>
	</data>
</odoo>