		<!-- Con este vista se agrega los campos de metodo de pagos y usuarios dentro del 
		formulario de categoria de productos -->
		<record id="product_category_filter_inherit1" model="ir.ui.view">
			<field name="name">product.category.filter.inherit1</field>
			<field name="model">product.category</field>
			<field name="sequence">17</field>
			<field name="inherit_id" ref="product.product_category_form_view"/>
			<field name="arch" type="xml">
				<xpath expr="//sheet/div[@name='button_box']" position="inside">
					<button class="oe_stat_button" icon="fa-users" type="action"
							name="%(hs_product_category.action_account_salesperson)d"
							context='{"search_departments_users_id":active_id}'>
						<div class="o_field_widget o_stat_info">
							<span class="o_stat_value">
								<field name="user_count"/>
							</span>
							<span class="o_stat_text"> Users</span>
						</div>
					</button>
					<button class="oe_stat_button" type="action" icon="fa-credit-card" 
							name="%(action_journal_product_category)d"
							context='{"search_journal_id":active_id}'>
						<div class="o_field_widget o_stat_info">
							<span class="o_stat_value">
								<field name="account_journal_count"/>
							</span>
							<span class="o_stat_text"> Payments</span>
						</div>
					</button>
				</xpath>
			</field>
		</record>
		
