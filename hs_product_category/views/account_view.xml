		<!-- model.name inherit form view -->
		<record id="account_payment_filter_inherit1" model="ir.ui.view">
			<field name="name">account.payment.filter.inherit1</field>
			<field name="model">account.payment</field>
			<field name="inherit_id" ref="account.view_account_payment_form"/>
			<field name="arch" type="xml">
				<!-- Add your xpath here -->
				<xpath expr="//field[@name='journal_id']" position="attributes">
					<attribute name="domain">
						['&amp;',('type','in',['cash','bank']),('department_ids','!=',[categ.id for categ in user.departments_ids])]
					</attribute>
				</xpath>
			</field>
		</record>


		<!-- Agrega el departamento categoria de producto a la vista de los diarios -->
		<record id="acccount_journal_inherit1" model="ir.ui.view">
			<field name="name">account.journal.inherit1</field>
			<field name="model">account.journal</field>
			<field name="inherit_id" ref="account.view_account_journal_form"/>
			<field name="arch" type="xml">
				<xpath expr="//group/field[@name='type']" position="after">
					<!-- Add your fields here -->
					<field name="department_ids"
						   nolabel="1"
						   options="{'no_create':True, 'no_create_edit':True}"
						   widget="many2many"/>
				</xpath>
			</field>
		</record>
